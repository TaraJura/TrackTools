{
  "manifest_version": 3,
  "name": "Magic Extension - Browser Analytics",
  "version": "1.0.0",
  "description": "Track your browsing habits with powerful analytics",
  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "idle"
  ],
  "host_permissions": [
    "https://techtools.cz/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
